@model SchoolAdministration.Web_UI.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
}
<br />
@using (Html.BeginForm("create", "Courses", FormMethod.Post,new {@class ="form-horizontal" }))
{
<fieldset>
    <legend>Create Course</legend>
    <div class="form-group">
        @Html.LabelFor(i => i.Name, new { @class = "control-label col-lg-3" })
        <div class="col-lg-9">
            @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.Name, "", new { @class = "validation" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Description, new { @class = "control-label col-lg-3" })
        <div class="col-lg-9">
            @Html.TextAreaFor(i => i.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.Description, "", new { @class = "validation" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Date, new { @class = "control-label col-lg-3" })
        <div class="col-lg-9">
            @Html.TextBoxFor(i => i.Date, "{0:dd-MM-yyyy}", new { @class = "form-control" ,@type= "date" })
            @Html.ValidationMessageFor(i => i.Date, "", new { @class = "validation" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Teacher, new { @class = "control-label col-lg-3" })
        <div class="col-lg-9">
            @Html.TextBoxFor(i => i.Teacher, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.Teacher, "", new { @class = "validation" })
        </div>
    </div>
    <div class="text-center">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</fieldset>
}

